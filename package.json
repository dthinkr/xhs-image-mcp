{
  "name": "xhs-image-mcp",
  "version": "1.1.0",
  "description": "MCP server for converting articles to Xiaohongshu (小红书) style image cards with AI cover generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xhs-image-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/themes dist/",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "tsx src/test.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dthinkr/xhs-image-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/dthinkr/xhs-image-mcp/issues"
  },
  "homepage": "https://github.com/dthinkr/xhs-image-mcp#readme",
  "keywords": [
    "mcp",
    "xiaohongshu",
    "xhs",
    "小红书",
    "text-to-image",
    "social-media",
    "image-generator",
    "claude",
    "model-context-protocol"
  ],
  "author": "dthinkr",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
